<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comparando..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compararButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/compararButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comparar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Texto1"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="text"
        android:text="contraseña"
        app:layout_constraintBottom_toTopOf="@+id/Texto2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Contraseña:"
        app:layout_constraintBottom_toTopOf="@+id/Texto1"
        app:layout_constraintStart_toStartOf="@+id/Texto1" />

    <TextView
        android:id="@+id/repetir_contraseña"
        android:layout_width="138dp"
        android:layout_height="19dp"
        android:text="Repetir contraseña:"
        app:layout_constraintBottom_toTopOf="@+id/Texto2"
        app:layout_constraintStart_toStartOf="@+id/Texto2" />

    <EditText
        android:id="@+id/Texto2"
        android:layout_width="171dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="text"
        android:text="repite tu contraseña"
        app:layout_constraintBottom_toTopOf="@+id/compararButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>